---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

var posts = await getCollection("blog");
posts = posts.filter(({ data }) =>
  import.meta.env.PROD ? data.draft !== true : true
);
posts.sort(
  (a, b) =>
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={SITE.TITLE} description={SITE.DESCRIPTION} />
    <style>
      ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 1rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        position: relative;
        width: calc(30% - 0.5rem);
      }
      ul li::marker {
        content: none;
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li:first-child .tags {
        bottom: 4.7rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      .draft {
        float: right;
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        color: var(--pico-color-amber-250);
        background-color: rgb(var(--white));
        border-radius: 75%;
        padding: 0.2rem;
        font-size: 1.1rem;
      }
      .tags {
        float: right;
        position: absolute;
        bottom: 3.6rem;
        right: 0.5rem;
        font-size: 0.75rem;
        display: inline-flex;
        justify-items: flex-end;
      }
      .tags a {
        margin-right: 0.5rem;
        color: rgba(var(--gray-light), 0.5);
        transition: color 0.3s ease;
      }
      .tags a:hover {
        color: rgba(var(--gray-light), 0.9);
        transition: color 0.3s ease;
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.35em;
        }
        ul li:first-child .tags {
          bottom: 4.2rem;
        }
        .tags {
          bottom: 4rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <Breadcrumbs icons={["archive"]} />
      <h1>Blog</h1>
      <ul>
        {
          posts.map((post) => (
            <li>
              <a href={`/blog/${post.slug}/`}>
                <div>
                  {post.data.draft && (
                    <Icon
                      name="tabler:barrier-block"
                      size="1.5em"
                      class="draft"
                    />
                  )}
                  <Image
                    width={720}
                    height={360}
                    src={post.data.heroImage || ""}
                    alt={post.data.title}
                  />
                  {post.data.tags && (
                    <div class="tags">
                      {post.data.tags.sort().map((tag) => (
                        <a href={`/blog/tag/${tag}/`}>
                          <Icon name="tabler:tag" />
                          {tag}
                        </a>
                      ))}
                    </div>
                  )}
                </div>
                <h4 class="title">{post.data.title}</h4>
                <p class="date">
                  <FormattedDate date={post.data.pubDate.toString()} />
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
    <Footer />
  </body>
</html>
