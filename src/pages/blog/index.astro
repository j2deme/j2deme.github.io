---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

var posts = await getCollection("blog");
posts = posts.filter(({ data }) =>
  import.meta.env.PROD ? data.draft !== true : true
);
posts.sort((a, b) => {
  const dateA = a.data.lastUpdated
    ? new Date(a.data.lastUpdated)
    : new Date(a.data.pubDate);
  const dateB = b.data.lastUpdated
    ? new Date(b.data.lastUpdated)
    : new Date(b.data.pubDate);
  return dateB.valueOf() - dateA.valueOf();
});
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={SITE.TITLE} description={SITE.DESCRIPTION} />
    <style>
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        position: relative;
        width: calc(50% - 1rem);
      }
      ul li::marker {
        content: none;
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      .draft {
        float: right;
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        color: var(--pico-color-amber-250);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h2>Blog</h2>
        <ul>
          {
            posts.map((post) => (
              <li>
                {post.data.draft && (
                  <Icon
                    name="tabler:barrier-block"
                    size="1.5em"
                    class="draft"
                  />
                )}
                <a href={`/blog/${post.slug}/`}>
                  <Image
                    width={720}
                    height={360}
                    src={post.data.heroImage || ""}
                    alt={post.data.title}
                  />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate.toString()} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
